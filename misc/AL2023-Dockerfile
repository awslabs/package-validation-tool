FROM amazonlinux:2023

# AL2023 based container to run package validation tool

# Package dependencies
RUN dnf install -y \
    rpm-build \
    dnf-utils

# Typical package build dependencies, and replace gnupg minimal with gnupg
RUN dnf install -y  --allowerasing \
    automake \
    autoconf \
    gcc \
    git \
    gettext \
    gettext-devel \
    gnupg2 \
    libtool \
    make

# Python dependencies to install the tool
RUN dnf install -y \
    python3-setuptools \
    python3-pip
