FROM amazonlinux:2023

# AL2023 based container to run package validation tool

# Package dependencies
RUN dnf install -y \
    rpm-build \
    dnf-utils

# Typical package build dependencies
RUN dnf install -y \
    git \
    gettext \
    gettext-devel \
    libtool \
    automake \
    autoconf

# Python dependencies to install the tool
RUN dnf install -y \
    python3-setuptools \
    python3-pip
